{% extends 'base.html.twig' %}

{% block title %}
	{{garden.address}}

{% endblock %}
{% block body %}
	<h1>{{garden.address}}</h1>
	<p class='lead'>{{garden.intro|nl2br}}</p>
	<p>{{garden.description|nl2br}}</p>
	<p>Postcode:
		{{garden.zip}}
		{{garden.municipality}}</p>
	<p>Oppervlak tuin:
		{{garden.size}}
		m&#178;</p>
	<p>Bouwjaar huis:
		{{garden.anno}}</p>

	<hr/>

	{% if images %}

		{% for image in images %}
			<img class="standard m-2" src="{{asset(image['url'])}}"/>

		{% endfor %}

	{% else %}
		<p>[Nog geen foto's aanwezig]</p>
	{% endif %}
	<hr/>

	<a href="../">Terug</a>
{% endblock %}
